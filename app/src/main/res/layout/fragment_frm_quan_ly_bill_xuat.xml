<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FrmQuanLyBillXuat"
    >
    <EditText
        android:id="@+id/edttimkiembillxuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_timkiem"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvbillxuat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edttimkiembillxuat"
        android:layout_centerInParent="true" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fltbillxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icxemchitiet" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option1bxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_option2bxuat"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icadd"
        android:visibility="invisible"
        app:fabSize="normal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_option2bxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fltbillxuat"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icluutru"
        android:visibility="invisible"
        app:fabSize="normal" />
</RelativeLayout>